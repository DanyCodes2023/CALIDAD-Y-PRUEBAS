@model ProductDto
@{

}

<h2 class="text-center mb-4">Ingresa tus datos personales:</h2>

<!-- Formulario para ingresar datos -->
<form asp-action="Edit" asp-controller="Products" method="post" enctype="multipart/form-data">
    <div class="row mb-3">
        <div class="col-md-4">
            <input type="text" class="form-control" asp-for="Nombres" placeholder="Ingresar nombres" required maxlength="100">
        </div>
        <div class="col-md-4">
            <input type="text" class="form-control" asp-for="Apellidos" placeholder="Ingresar apellidos" required maxlength="100">
        </div>
        <div class="col-md-4">
            <input type="text" class="form-control" asp-for="DNI" placeholder="Ingresar DNI" required maxlength="8">
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-4">
            <input type="text" class="form-control" asp-for="Telefono" placeholder="Ingresar teléfono" required maxlength="15">
        </div>
        <div class="col-md-4">
            <input type="email" class="form-control" asp-for="Email" placeholder="Email" required maxlength="100">
        </div>
        <div class="col-md-4">
            <select class="form-control" asp-for="Departamento" required>
                <option selected>Elegir departamento</option>
                <option>Lima</option>
                <option>Arequipa</option>
                <option>Cusco</option>
            </select>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-4">
            <select class="form-control" asp-for="Provincia" required>
                <option selected>Elegir provincia</option>
                <option>Lima</option>
                <option>Trujillo</option>
                <option>Arequipa</option>
            </select>
        </div>
        <div class="col-md-4">
            <select class="form-control" asp-for="Distrito" required>
                <option selected>Elegir distrito</option>
                <option>Miraflores</option>
                <option>San Isidro</option>
                <option>Surco</option>
            </select>
        </div>
    </div>

    <!-- Datos del vehículo -->
    <h5 class="text-center mt-4">Datos del auto: Ingresa los datos de tu vehículo</h5>
    <div class="row mb-3">
        <div class="col-md-4">
            <input type="text" class="form-control" asp-for="NombreAuto" placeholder="Nombre del auto" required maxlength="100">
        </div>
        <div class="col-md-4">
            <input type="number" class="form-control" asp-for="Precio" placeholder="Precio" required>
        </div>
        <div class="col-md-4">
            <input type="number" class="form-control" asp-for="Kilometros" placeholder="Kilometraje" required>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-4">
            <input type="text" class="form-control" asp-for="Combustible" placeholder="Combustible" required maxlength="50">
        </div>
        <div class="col-md-4">
            <input type="text" class="form-control" asp-for="Motor" placeholder="Motor" required maxlength="100">
        </div>
        <div class="col-md-4">
            <input type="text" class="form-control" asp-for="Color" placeholder="Color" required maxlength="50">
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-4">
            <input type="number" class="form-control" asp-for="AñoModelo" placeholder="Año del modelo" required>
        </div>
        <div class="col-md-4">
            <input type="text" class="form-control" asp-for="Transmision" placeholder="Transmisión" required maxlength="50">
        </div>
        <div class="col-md-4">
            <input type="text" class="form-control" asp-for="Tipo" placeholder="Tipo de vehículo" required maxlength="50">
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-4">
            <input type="number" class="form-control" asp-for="Puertas" placeholder="Número de puertas" required>
        </div>
        <div class="col-md-8">
            <input type="text" class="form-control" asp-for="Descripcion" placeholder="Descripción del vehículo" required>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-md-4">
            <select class="form-control" asp-for="Estado" required>
                <option value=1>En stock</option>
                <option value=2>Vendido</option>
            </select>
        </div>
    </div>
    <!-- Términos y condiciones -->
    <div class="form-check mb-3">
        <input class="form-check-input" type="checkbox" id="terms1" required>
        <label class="form-check-label" for="terms1">
            He leído y acepto la Política de Privacidad de Protección de Datos Personales
            <a href="#" data-bs-toggle="modal" data-bs-target="#modal1">(Ver aquí)</a>.
        </label>
    </div>
    <div class="form-check mb-3">
        <input class="form-check-input" type="checkbox" id="terms2">
        <label class="form-check-label" for="terms2">
            Autorizo al Importador el tratamiento de mis datos personales para las finalidades adicionales
            <a href="#" data-bs-toggle="modal" data-bs-target="#modal2">(Ver aquí)</a>.
        </label>
    </div>
    <div class="form-check mb-3">
        <input class="form-check-input" type="checkbox" id="terms3">
        <label class="form-check-label" for="terms3">
            Autorizo la transferencia de mis datos a terceros mencionados en la Política
            <a href="#" data-bs-toggle="modal" data-bs-target="#modal3">(Ver aquí)</a>.
        </label>
    </div>

    <!-- Botón enviar (deshabilitado por defecto) -->
    <div class="text-center">
        <button type="submit" id="submitBtn" class="btn btn-danger btn-lg" disabled>ENVIAR</button>
    </div>

    <!-- Modales para mostrar el texto de los términos -->
    <!-- Modal 1 -->
    <div class="modal fade" id="modal1" tabindex="-1" aria-labelledby="modal1Label" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modal1Label">Política de Privacidad</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    "He leído y comprendido la Política de Privacidad sobre la protección de mis datos personales,
                    y acepto que mis datos sean tratados conforme a lo establecido en dicho documento."
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" data-bs-dismiss="modal">Aceptar</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal 2 -->
    <div class="modal fade" id="modal2" tabindex="-1" aria-labelledby="modal2Label" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modal2Label">Tratamiento de Datos</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    "Autorizo al Importador a utilizar mis datos personales con las finalidades adicionales especificadas,
                    como el envío de información comercial o promociones, siempre respetando los términos de la política de privacidad."
                </div>
                <div class="modal-footer">
                    <button type="button"  class="btn btn-primary" data-bs-dismiss="modal">Aceptar</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal 3 -->
    <div class="modal fade" id="modal3" tabindex="-1" aria-labelledby="modal3Label" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modal3Label">Transferencia de Datos</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    "Autorizo la transferencia de mis datos personales a terceros mencionados en la Política de Privacidad,
                    con el fin de cumplir con las finalidades descritas en el documento."
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" data-bs-dismiss="modal">Aceptar</button>
                </div>
            </div>
        </div>
    </div>
            <!-- JavaScript para habilitar/deshabilitar el botón -->
        <script>
            const submitBtn = document.getElementById('submitBtn');
            const terms1 = document.getElementById('terms1');
            const terms2 = document.getElementById('terms2');
            const terms3 = document.getElementById('terms3');

            // Función para habilitar o deshabilitar el botón
            function checkTerms() {
                if (terms1.checked && terms2.checked && terms3.checked) {
                    submitBtn.disabled = false;
                } else {
                    submitBtn.disabled = true;
                }
            }

            // Escuchar los cambios en los tres checkboxes
            terms1.addEventListener('change', checkTerms);
            terms2.addEventListener('change', checkTerms);
            terms3.addEventListener('change', checkTerms);

            // Llamar a la función al cargar la página para asegurarse de que el botón esté deshabilitado inicialmente
            checkTerms();
        </script>

        <!-- Bootstrap JS -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

</form>
<style>
    body {
        background-color: #F0F2F6;
        font-family: Arial, sans-serif;
    }

    .container {
        margin-top: 20px; /* Aplica margen de 20px en la parte superior */
        margin-bottom: 20px; /* Aplica margen de 20px en la parte inferior */
        background-color: white;
        border-radius: 10px;
        padding: 40px;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
        background-color: #121116; /* Color de fondo de la tarjeta */
        border: 2px solid #FA0555; /* Borde de la tarjeta con color #FA0555 */
    }



    h2, h5 {
        color: #FA0555; /* Color de texto consistente #F3F3F4 */
    }

    .form-control {
        border: 1px solid #ccc;
        border-radius: 5px;
        padding: 10px;
        font-size: 1rem;
    }

    .form-check-input {
        width: 20px;
        height: 20px;
        margin-right: 10px;
    }

    .form-check-label {
        font-size: 0.9rem;
        color: #F3F3F4; /* Color consistente con los textos anteriores */
    }

    .btn-danger {
        background-color: #F10A66; /* Color consistente con los botones anteriores */
        border-color: #F10A66;
        padding: 10px 30px;
        font-size: 1.2rem;
        color: #FEB5C8; /* Color del texto en el botón */
    }

        .btn-danger:hover {
            background-color: #A00000; /* Color oscuro al pasar el ratón por encima */
        }
</style>
